{
  "name": "modern-canvas-editor",
  "type": "module",
  "version": "0.0.17",
  "packageManager": "pnpm@10.18.1",
  "description": "Vue 2D WebGL editor, based modern-canvas. only the ESM.",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-canvas-editor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-canvas-editor.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-canvas-editor/issues"
  },
  "keywords": [
    "vue",
    "webgl",
    "modern",
    "canvas",
    "editor",
    "mce",
    "typescript"
  ],
  "sideEffects": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "default": "./dist/index.css"
    },
    "./*.mjs": "./*.js",
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "styles": "dist/index.css",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/*.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:code": "vite build",
    "build:tsc": "NODE_ENV=production vue-tsc --emitDeclarationOnly --project tsconfig.build.json",
    "build:plugins": "jiti ./scripts/plugins.ts",
    "build:dts": "jiti ./scripts/dts.ts",
    "build": "pnpm build:code && pnpm build:tsc && pnpm build:dts",
    "dev": "MODE=local vite playground",
    "lint": "eslint src",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "lottie-web": "^5",
    "modern-gif": "^2",
    "modern-mp4": "^0",
    "modern-openxml": "^1",
    "modern-pdf": "^1",
    "typescript": ">=4.7",
    "vue": "^3.5.0",
    "yoga-layout": "^3"
  },
  "peerDependenciesMeta": {
    "lottie-web": {
      "optional": true
    },
    "modern-gif": {
      "optional": true
    },
    "modern-mp4": {
      "optional": true
    },
    "modern-openxml": {
      "optional": true
    },
    "modern-pdf": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "yoga-layout": {
      "optional": true
    }
  },
  "dependencies": {
    "@floating-ui/vue": "^1.1.9",
    "@vueuse/components": "^13.9.0",
    "@vueuse/core": "^13.9.0",
    "diff": "^8.0.2",
    "file-saver": "^2.0.5",
    "lodash-es": "^4.17.21",
    "modern-canvas": "^0.10.2",
    "modern-font": "^0.4.4",
    "modern-idoc": "^0.10.1",
    "modern-text": "^1.9.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/file-saver": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.7.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "bumpp": "^10.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.37.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "modern-gif": "^2.0.4",
    "modern-mp4": "^0.2.0",
    "modern-openxml": "^1.9.0",
    "modern-pdf": "^1.3.2",
    "sass-embedded": "^1.93.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": ""
  }
}
